            </table>
        </div>
    </div>



    <script>
        $(document).ready(function () {
          
            $('#state').DataTable({
                "language": uk_trans,
                "processing": true,
                "serverSide": true,
                "ajax": "{{path('ajax.document.getlisttyped',{'type':'state'})}}?datecontrol={{ "now"|date("Y-m-d") }}",
                "columns": [
                    {"data": "num"},
                    {"data": "date_in"},
                    {"data": "date_control"},
                    {"data": "view"},
                    {"data": "edit"},
                    {"data": "arch"}
                ]

                
            });
            $('#people').DataTable({
                "language": uk_trans,
                "processing": true,
                "serverSide": true,
                "ajax": "{{path('ajax.document.getlisttyped',{'type':'people'})}}?datecontrol={{ "now"|date("Y-m-d") }}",
