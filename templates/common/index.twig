                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" style="margin-top: 8px;">  
                        <form action="{{url('clerk.doc.push')}}" method="post">
                            <div class="input-group">
                                <input type="text" class="form-control" width="80%" name="key" id="search" placeholder="Пошук..." />
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </span>	

                            </div>
                            <input type="hidden" name="cball" value="on">
                        </form>
                    </div>
                        -->
                </div>
            </nav>
        </section>


        <section id="main-content">
            <div class="container">
                <div class="row">

                    <div class="col-lg-12 main">
                        {% block content %}
                        {% endblock %}				

                    </div>
                </div>
            </div>
        </section>
        <script src="/js/forms.js" type="text/javascript"></script>
</html>