{% extends "index.twig" %}

{% block title %}
    Картка № {{doc.num_prefix_1}}-{{doc.internal_number}}
{% endblock %}
{% block content %}


    <table width="100%" border="1">
        <tr>
            <td width="20%">
                {{doc.num_prefix_1}}-{{doc.internal_number}}
            </td>
            <td>
                <h2>КОНТРОЛЬ</h2>
            </td>
            <td width="20%">
                {{doc.date_control}}
            </td>
        </tr>
        <tr>

            <td  colspan="3">
                <h1>
                    КАРТКА ОБЛІКУ<br>
                    скарг, заяв, пропозицій
                </h1>
            </td>

        </tr>
        <tr>
            <td width="20%">
                Громадянин
            </td>
            <td colspan="2">
                {{doc.lastname}} {{doc.firstname}} {{doc.secondname}}
            </td>
        </tr>
        <tr>
            <td width="20%">
                Адреса
            </td>
            <td colspan="2">
                вул. {{doc.street}}, буд. {{doc.building}}, {% if doc.room!='' %}кв. {{doc.room}}{% endif %}
            </td>
        </tr>
        <tr>
            <td width="20%">
                Місце роботи та посада
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Звідки, дата, номер
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Надійшла повторно
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Зміст
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Резолюція
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Історія переміщень
            </td>
            <td colspan="2">

            </td>
        </tr>


    </table>

{% endblock %}
