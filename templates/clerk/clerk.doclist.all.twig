                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Номер</th>
                        <th>Дата створення</th>
                        <th>Дата контролю</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div id="menu2" class="tab-pane fade">
            <h3>Скарги</h3>
            <table id="people" class="display table hover" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Номер</th>
