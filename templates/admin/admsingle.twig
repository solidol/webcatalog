{% extends "index.twig" %}

{% block title %}
    {{book.name}} {{book.author}} {{book.editor}} {{book.compiler}}
{% endblock %}
{% block content %}

    <article role="main">
        <h1>{{book.name}}</h1>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="row thumbnail">
                    <img src="{% if book.title %}/uploads/books/{{book.title}}{% else %}#{% endif %}" alt="Image" style="max-width:100%;">
                </div>
            </div>				
            <div class="col-lg-9 col-md-9 col-sm-6 col-xs-12">

                <div class="row">
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">Назва</span>
                        <input id="name" name="name" type="text" class="form-control" aria-label="..." value="{{book.name}}">			
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">Автор</span>
                        <input id="author" name="author" type="text" class="form-control" aria-label="..." value="{{book.author}}">			
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">Редактор</span>
                        <input id="editor" name="editor" type="text" class="form-control" aria-label="..." value="{{book.editor}}">			
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">Укладач</span>
                        <input id="compiller" name="compiler" type="text" class="form-control" aria-label="..." value="{{book.compiler}}">			
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">Рік видавництва</span>
                        <input id="year" name="year" type="text" class="form-control" aria-label="..." value="{{book.year}}">			
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">Де видано</span>
                        <input id="printed" name="printed" type="text" class="form-control" aria-label="..." value="{{book.printed}}">			
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">Мова видання</span>
                        <input id="lang" name="lang" type="text" class="form-control" aria-label="..." value="{{book.lang}}">			
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">Категорія</span>
                        <input id="type" name="type" type="text" class="form-control" aria-label="..." value="{{book.type}}">			
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">ISBN/ISSN</span>
                        <input id="isbn" name="isbn" type="text" class="form-control" aria-label="..." value="{{book.isbn}}">			
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon wb-group-addon">ББК</span>
                        <input id="bbk" name="bbk" type="text" class="form-control" aria-label="..." value="{{book.bbk}}">			
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
		    <div class="col-xs-12">
                <h2>Зміст</h2>
                <div class="row">
                    <textarea id="content" name="content" class="form-control" rows="12" style="min-width: 100%">{{book.content}}</textarea>			
                </div>
            </div>
            <div class="col-xs-12">
                <h2>Анотація</h2>
                <div class="row">
                    <textarea id="summary" name="summary" class="form-control" rows="12" style="min-width: 100%">{{book.summary}}</textarea>
                </div>

            </div>
        </div>				

    </article>

{% endblock %}

