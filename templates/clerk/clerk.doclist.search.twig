    <script>
        $(document).ready(function () {

            var tablestate = $('#state').DataTable({
                "language": uk_trans,
                "processing": true,
                "serverSide": true,
                "ajax": "{{path('ajax.document.getlisttyped',{'type':'state'})}}",
                "columns": [
                    {"data": "num"},
                    {"data": "date_in"},
                    {"data": "date_control"},
                    {"data": "view"},
                    {"data": "edit"},
                    {"data": "arch"}
                ]


